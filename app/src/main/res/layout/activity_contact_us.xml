<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_bottom"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#CB202D"
            android:layout_alignParentBottom="true"/>

        <View
            android:id="@+id/v_wave"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/ic_wave2"
            android:layout_above="@id/v_bottom"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Contact Us"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button">
        </TextView>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_callUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Us"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true">
            </TextView>

            <TextView
                android:id="@+id/tv_callUsDesription"
                android:layout_below="@+id/tv_callUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office: 082 - XXX XXX"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true">
            </TextView>

            <TextView
                android:layout_below="@+id/tv_callUsDesription"
                android:id="@+id/tv_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whatsapp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingTop="20dp"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true">
            </TextView>

            <TextView
                android:id="@+id/tv_whatsappDesription"
                android:layout_below="@+id/tv_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01X - XXXXXXX"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true">
            </TextView>

            <TextView
                android:layout_below="@+id/tv_whatsappDesription"
                android:id="@+id/tv_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingTop="20dp"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true">
            </TextView>

            <TextView
                android:id="@+id/tv_emailDescription"
                android:layout_below="@+id/tv_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tablefast6@gmail.com"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true">
            </TextView>

            <ImageView
                android:layout_below="@+id/tv_emailDescription"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/headphone"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="125dp">

            </ImageView>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>